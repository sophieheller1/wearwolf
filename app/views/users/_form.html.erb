<%= form_for(@user) do |f| %>
  <div class="row top-padded">
    <%= f.label :favorite, "Favorite location" %>
    <%= f.text_field :favorite, placeholder: 'Transylvania', id:"favorite-location" %>
  </div>
  <div class="row top-padded">
    <%= f.label :preference, "I run?"%><br>
    <div class="space-form"><%= f.collection_radio_buttons(:preference, @preference_collection, :first, :last) %></div>
  </div>
  <div class="change-gender top-padded">
    <%= f.label :gender %>
    <%= f.collection_radio_buttons(:gender, @gender_collection, :first, :last) %>
  </div>
  <div class="actions top-padded">
    <%= f.submit 'Update your profile' %>
  </div>
<% end %>
