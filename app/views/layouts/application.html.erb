<!DOCTYPE html>
<html>
  <head>
    <title>Wearwolf</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://fonts.google.com/specimen/Merienda?selection.family=Merienda">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body data-env="<%= [ENV['GOOGLE_MAPS_GEOCODING_API_KEY'], ENV['DARK_SKY_API_KEY']] %>">
    <div class="top-bar row">
      <div class="name">
        <h1>Wearwolf</h1>
      </div>
      <div class="mascot">
        <%= image_tag("/assets/logo.jpg", class:"mascot") %>
      </div>
      <div class="user-info">
        <% if current_user %>
          <div class="signed_in_as">
            <h4>Signed in as <%= current_user.email %></h4>

            <div class="user-buttons">
              <%= button_to 'Your profile', edit_user_path(current_user), { method: :get } %>
              <%= button_to 'Log Out', destroy_user_session_path, { method: :delete } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <% flash.each do |key, value| %>
    <div class="flash-container">
      <%= value %>
    </div>
    <% end %>
    <div class="main-page">
      <%= yield %>
    </div>
  </body>
</html>
