<!DOCTYPE html>
<html>
  <head>
    <title>Wearwolf</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://fonts.google.com/specimen/Merienda?selection.family=Merienda">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">  
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="top-bar row">
      <div class="name">
        <h1>Wearwolf</h1>
      </div>
      <div class="mascot">
        <img src="http://www.wallmonkeys.com/media/catalog/product/cache/1/image/9df78eab33525d08d6e5fb8d27136e95/4/8/48030686.jpg" class="mascot" />
      </div>
      <div class="user-info">
        <% if current_user %>
          <div class="signed_in_as">
            <h4>Signed in as <%= current_user.email %></h4>

            <div class="user-buttons">
              <%= button_to 'Your profile', edit_user_path(current_user), { method: :get } %>
              <%= button_to 'Log Out', destroy_user_session_path, { method: :delete } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="main-page">
      <%= yield %>
    </div>
  </body>
</html>
