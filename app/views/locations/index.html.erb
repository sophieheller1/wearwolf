<div class="search-bar">
  <%= form_tag(locations_path, :method => 'get', id: 'search-form') do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Search Locations', class:"search-form" %>
  <%= submit_tag 'Search', class:"search-button" %>
  <% end %>
</div>


<div class="location-container">
  <div class="callout primary">
    <div class="greeting">
      Hello, <%= current_user.email %>!
    </div>
    Daily High: <%= (@darksky.high).round %>
    Daily Low: <%= (@darksky.low).round %>
    Chance of Precipitation: <%= (@darksky.precipitation.to_f * 100).round %>%
    Summary: <%= @darksky.summary %>
  </div>
</div>
